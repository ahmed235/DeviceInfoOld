<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensorViewsWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">     
        <ImageView 
	   	    android:id="@+id/masterExpandCollapseImageView"
	   	    style="@style/SensorExpandCollapseImageView"/>
        <TextView 
	        android:id="@+id/sensorsTitleTextView"
	        style="@style/SensorsTitleTextView" />
	    <ImageView 
	   	    android:id="@+id/masterPlayPauseImageView"
	   	    style="@style/SensorPlayPauseImageView"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/sensorViewsContent"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
	    <TextView 
	        android:id="@+id/categoryMotionTextView"
	        style="@style/SensorsCategoryTextView" />
	    <LinearLayout 
	        android:id="@+id/categoryMotionWrapper"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" />
	    <TextView 
	        android:id="@+id/categoryPositionTextView"
	        style="@style/SensorsCategoryTextView" />
	    <LinearLayout 
	        android:id="@+id/categoryPositionWrapper"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" />
	    <TextView 
	        android:id="@+id/categoryEnvironmentTextView"
	        style="@style/SensorsCategoryTextView" />
	    <LinearLayout 
	        android:id="@+id/categoryEnvironmentWrapper"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>