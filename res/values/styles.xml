<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GroupImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="GroupTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SensorsTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SensorsCategoryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="SensorTypeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="SensorLabelTextView">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
<!--         <item name="android:textStyle">bold</item> -->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/textSizeMicro</item>        
    </style>
    <style name="SensorValueTextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>    
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>  
        <item name="android:textSize">@dimen/textSizeMicro</item>
    </style>
    
    <style name="SensorPlayPauseImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">Play/Pause</item>
    </style>
    <style name="SensorExpandCollapseImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">Expand/Collapse</item>
    </style>
</resources>