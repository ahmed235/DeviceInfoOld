<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
  
    
    <style name="LeftPane">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">40</item>        
    </style>
    <style name="RightPane">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">60</item>        
    </style>
    
    
    <style name="Scroller" parent="@style/Match">
        <item name="android:orientation">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>
    <style name="DetailsWrapper" parent="@style/Wide">
        <item name="android:orientation">vertical</item>
    </style>
    

    
    <style name="GroupIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">"@drawable/icon</item>
        
    </style>
    <style name="GroupLabel" parent="@style/Wide">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    
    
    <style name="ExpandCollapse" parent="@style/Wrap">
        
    </style>
    <style name="ExpandCollapse.Small">
        
    </style>
    <style name="PlayPause" parent="@style/Wrap">
        
    </style>
    <style name="PlayPause.Small">
        
    </style>
</resources>